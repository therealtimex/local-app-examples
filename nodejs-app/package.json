{
    "name": "nodejs-sdk-demo",
    "version": "1.0.0",
    "description": "Demo app for RealtimeX SDK with TypeScript and TailwindCSS",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && npx tailwindcss -i ./src/styles.css -o ./public/styles.css",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@realtimex/sdk": "^1.3.1",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "tailwindcss": "^3.4.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    }
}
